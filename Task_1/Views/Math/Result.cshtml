
@{
    ViewData["Title"] = "Result";
}

<!DOCTYPE html>
<html>
<head>
    <title>Результат обчислень</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .result-container {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            width: 300px;
            text-align: center;
        }

        .result-label {
            font-weight: bold;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .result-value {
            font-size: 36px;
        }
    </style>
</head>
<body>
    <div class="result-container">
        <h1 class="result-label">Результат обчислень</h1>
        <div class="result-value">
            @Model
        </div>
    </div>
</body>
</html>


