
@{
    ViewData["Title"] = "Error";
}

<!DOCTYPE html>
<html>
<head>
    <title>Помилка</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .error-container {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            width: 300px;
            text-align: center;
        }

        .error-label {
            font-weight: bold;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .error-message {
            font-size: 18px;
            color: #ff0000; /* Червоний колір для виділення помилки */
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h1 class="error-label">Помилка</h1>
        <p class="error-message">
            <!-- Тут виводиться повідомлення про помилку -->
           @Model
        </p>
    </div>
</body>
</html>

